---
import { RotateCcw, Bot, MessageSquare, Puzzle } from 'lucide-astro';
---

<section id="services" class="px-6 py-20">
  <div class="max-w-6xl mx-auto">
    <h2 class="text-3xl md:text-4xl font-bold text-center mb-16">
      ¿Qué podemos hacer por tu negocio?
    </h2>
    <div class="grid md:grid-cols-2 lg:grid-cols-4 gap-8">
      {
        [
          {
            icon: RotateCcw,
            title: 'Automatización de procesos',
            description: 'Optimiza workflows y elimina tareas repetitivas.',
            hasAction: false,
          },
          {
            icon: Bot,
            title: 'Integración de IA',
            description:
              ' Incorpora inteligencia artificial directamente en tus operaciones existentes.',
            hasAction: false,
          },
          {
            icon: MessageSquare,
            title: 'Chatbots conectados',
            description:
              'Asistentes conversacionales que se integran a tus datos y resuelven en contexto.',
            hasAction: false,
          },
          {
            icon: Puzzle,
            title: 'Soluciones a medida',
            description:
              'Apps con IA, servicios LLM, APIs, dashboards. Creamos lo que tu empresa necesita.',
            hasAction: true,
          },
        ].map(service => (
          <div class="flex flex-col gap-4 p-6 text-center border-2 hover:border-accent/50 transition-colors rounded-2xl bg-card">
            <div class="w-16 h-16 bg-accent/10 rounded-full flex items-center justify-center mx-auto mb-6">
              <service.icon size={32} class="text-accent" />
            </div>
            <h3 class="text-lg font-semibold mb-3">{service.title}</h3>
            <p class="text-sm text-muted-foreground mb-6">{service.description}</p>
            {service.hasAction && (
              <a
                href="#contact"
                class="block w-full text-xs px-3 py-2 border border-accent text-accent rounded-lg hover:bg-accent hover:text-accent-foreground transition-colors"
              >
                Consultar ahora
              </a>
            )}
          </div>
        ))
      }
    </div>
  </div>
</section>
